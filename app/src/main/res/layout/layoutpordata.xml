<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layoutpData"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/styletextview"
        android:gravity="center"
        android:padding="10dp"
        android:text="Lista Pela Data"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="250dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/styleview"
        android:id="@+id/dataEspecificaLinear"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:text="Data"
            android:gravity="center"
            android:layout_height="50dp">
        </TextView>
        <TextView
            android:id="@+id/editDataEspecificar"
            android:layout_width="100dp"
            android:gravity="center"
            android:hint="Dia/MÃªs/Ano"
            android:layout_height="50dp">
        </TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="55dp"
            android:text="Ver"
            android:id="@+id/botaopData"
            android:layout_height="40dp">
        </androidx.appcompat.widget.AppCompatButton>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>