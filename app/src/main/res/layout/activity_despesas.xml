<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/DodgerBlue"
    tools:context=".MainDespesas.ListaDespesas">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/styleview"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/editDataDesp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                ></TextView>
        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/stylecards"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="250dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_height="50dp"
                android:text="Cadastrar" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_height="50dp"
                android:text="Despesas" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Descrição:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:hint="insirar uma descrição"
            android:inputType="textAutoComplete"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Total:" />

        <EditText
            android:id="@+id/editTotalDespesa"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="Informe o total"
            android:gravity="center"
            android:inputType="numberDecimal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botaoAddDespesas"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/stylesbotaoadicionar"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Adicionar" />
            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent"></Space>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botaoVoltar"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:textSize="10sp"
                android:background="@drawable/stylesbotaolista"
                android:layout_height="wrap_content"
                android:text="Voltar" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>